
const mongoose = require('mongoose')

//connect to mongodb using mongoose

mongoose.connect('mongodb://127.0.0.1:27017/task-manager-api', {
    useNewUrlParser: true,
    useCreateIndex: true
})


//define a collection

const User = mongoose.model('User', {
    name: {
        type: String
    },
    age:{
        type: Number
    }
})

// add stuff to that collection

const me = new User({
    name:'Andrew',
    age:24
})
