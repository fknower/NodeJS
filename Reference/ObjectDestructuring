const product = {
    label: 'Red notebook',
    price: 3,
    stock:201,
    salePrice: undefined
}

// The above object is destructured below. In the example below label is renamed, and rating is given a default value.


const {label:productLabel,stock,rating = 5} = product

console.log(productLabel)
console.log(stock)
console.log(rating)

//  Example of destructuring as a function argument

const transaction = (type,{label, stock }) => {
    console.log(type, label, stock)
}

transaction('order', product)

// Example of the transaction function destructured to a undefined value

const transaction = (type,{label, stock }={}) => {
    console.log(type, label, stock)
}
